<%= form_for(@user, html: {class:"form-horizontal"}) do |f| %>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :first_name %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :first_name, class: "form-control"%>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :last_name %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :last_name, class: "form-control"%>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :email %>
    </div>
    <div class="col-md-4">
      <%= f.email_field :email, class: "form-control"%>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
     <% if @user.first_name == nil %>
      <%= f.submit "Create User", class:"btn btn-primary"%>
      <% else %>
      <%= f.submit "Update User", class:"btn btn-primary"%>
      <% end %>
      <% if @user.first_name == nil %>
      <%= link_to 'Cancel', users_path, class:"btn btn-default" %>
      <% else %>
      <%= link_to 'Destroy', user_path, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
      <%= link_to 'Cancel', users_path, class:"btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
