<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-info" href="/users/new">New Users</a>
  </div>
  <h1>Users</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.full_name, user %></td>

      <% if user == current_user || current_role == true  %>
      <td><%= mail_to user.email%></td>
      <td class="text-right"><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-info" %></td>

      <% else %>

      <td></td>
      <td></td>

      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
