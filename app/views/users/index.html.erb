<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-info" href="/users/new">New Users</a>
  </div>
  <h1>Users</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.full_name, user %></td>
      <td><%= mail_to user.email%></td>
      <td class="text-right">
        <% if current_user.id == current_user.id %>
        <%= link_to 'Edit', edit_user_path(user), :class => "btn btn-info" %>
        <% end %>
        <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
