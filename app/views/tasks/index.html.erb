<div class="page-header">
  <div class="pull-right">
  <%=link_to 'New Task', new_project_task_path(@project), :class => "btn btn-info" %>
  </div>
<h1>Tasks for <%=@project.name%></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Due On</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do |task| %>
      <tr>
        <td><%= link_to task.description, project_task_path(@project, task) %></td>
        <td><%= task.due %></td>
        <td><%= task.completed %></td>
        <td class="text-right">
        <%= link_to 'Edit', edit_project_task_path(@project, task), :class => "btn btn-info" %>
        <%= link_to 'Destroy', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
