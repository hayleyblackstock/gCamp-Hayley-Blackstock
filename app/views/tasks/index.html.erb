<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-info" href="/tasks/new">New Task</a>
  </div>
<h1>Tasks</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Due On</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.description, task %></td>
        <td><%= link_to task.due, task %></td>
        <td class="text-right">
        <%= link_to 'Edit', edit_task_path(task), :class => "btn btn-info" %>
        <%= link_to 'Destroy', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
