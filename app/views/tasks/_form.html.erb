<%= form_for ([@project, @task]), html: {class:"form-horizontal"} do |f| %>

<%= render partial: "shared/form", locals: {object: @task} %>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :description %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :description, class: "form-control"%>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :due %>
    </div>
    <div class="col-md-4">
      <%= f.date_select :due, class: "form-control"%>
    </div>
  </div>
</div>

<% if @task.description !=nil %>
<div class="form-group">
  <label class="control-label col-md-2">
    Completed
  </label>
        <div class="col-md-4">
          <%= f.check_box(:completed) %>

  </div>
  </div>
<% end %>

<div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
      <%= f.submit class:"btn btn-primary"%>
      <%= link_to 'Cancel', project_tasks_path, class:"btn btn-default" %>
    </div>
  </div>
</div>

<% end %>
