<%= form_for(@project,  html: {class:"form-horizontal"}) do |f| %>
<% if @project.errors.any? %>
<div id="error_explanation">
  <div class ="alert alert-danger"><h4><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

    <ul>
      <% @project.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :name %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :name, class: "form-control"%>
    </div>
  </div>
</div>


<div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
      <% if @project.name == nil %>
      <%= f.submit "Create Project", class:"btn btn-primary"%>
      <% else %>
      <%= f.submit "Update Project", class:"btn btn-primary"%>
      <%= link_to 'Cancel', projects_path, class:"btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
